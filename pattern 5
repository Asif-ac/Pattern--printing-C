#include<stdio.h>
int main()
{
    int n,row,col;

    printf("Enter N =");
    scanf("%d", &n);
   for(row=1; row <=n; row++)
   {
       for(col=1;col<=n-row;col++) //space printing

       {
           printf(" ");
       }
       for(col=1; col<=row; col++) //number print or special character

       {
           printf("*");
       }
       printf("\n");

   }



   for(row=n-1; row >=1; row--)   {
       for(col=1;col<=n-row;col++) //space printing

       {
           printf(" ");
       }
       for(col=1; col<=row; col++) //number print or special character

       {
           printf("*");
       }
       printf("\n");

   }

    return 0;
}
